<% if flash[:alert] %>

    <%= js add_gritter(flash[:alert], title: "Ryans Portfolio", sticky: false, time: 2000) %>

<% elsif flash[:error] %>

    <%= js add_gritter(flash[:error], title: "Ryans Portfolio", sticky: false, time: 2000) %>

<% else %>

    <%= js add_gritter(flash[:notice], title: "Ryans Portfolio", sticky: false, time: 2000) %>

<% end %>