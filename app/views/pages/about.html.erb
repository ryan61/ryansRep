    <div class="card" >
        <h1>About</h1>
            <hr>
        
        <div class="row">
            <div class="col-md-4"> 
                    
                <%= image_tag "Final.jpg", width: 200,  alt: "Profile Image", class: 'profile-img' %>
                
            </div>
            <div class="col-md-8">
                <p>Find me in app/views/pages/about.html.erb</p>
                
                <p>
                <button
                    class="btn btn-primary"
                    type="button"
                    data-toggle="collapse"
                    data-target="#jobHistory"
                    aria-expanded="false"
                    aria-controler="jobHistory"
                >
                    Job History
                </button>
                
                <button
                    class="btn btn-primary"
                    type="button"
                    data-toggle="collapse"
                    data-target="#education"
